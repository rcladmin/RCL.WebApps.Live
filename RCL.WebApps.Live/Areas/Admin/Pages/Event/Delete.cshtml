@page
@model RCL.WebApps.Live.Areas.Admin.Pages.Event.DeleteModel
@{
    ViewData["Title"] = "Delete Event";
    Layout = "_LayoutEvent";
}

<div class="card shadow rounded mt-3 mb-5">
    <div class="card-header">
        <h3><a asp-page="./Index" asp-route-groupId="@Model?.Event?.groupId" class="link_click"><i class="bi bi-arrow-left-circle"></i></a> @ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
        {
            <div class="alert alert-danger">
                <p>ERROR: @Model.ErrorMessage</p>
            </div>
        }
        else
        {
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>Event</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Image
                    </dt>
                    <dd class="col-sm-10">
                        <img src="@Model?.Event?.image" height="100" width="100">
                    </dd>
                    <dt class="col-sm-2">
                        Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Event.name)
                    </dd>
                    <dt class="col-sm-2">
                        Status
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Event.status)
                    </dd>
                </dl>
                <form method="post" id="frm_delete">
                    <input type="hidden" asp-for="Event.id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> <a asp-page="./Index" asp-route-groupId="@Model?.Event?.groupId" class="btn btn-secondary link_click">Cancel</a>
                </form>
            </div>
        }
    </div>
</div>

