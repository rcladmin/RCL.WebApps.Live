@page
@model RCL.WebApps.Live.Areas.Admin.Pages.Event.DetailsModel
@{
    ViewData["Title"] = "Event Details";
    Layout = "_LayoutEvent";
}

<div class="card shadow rounded">
    <div class="card-header">
        <h3><a asp-page="./Index" asp-route-groupId="@Model.Event.groupId"><i class="bi bi-arrow-left-circle"></i></a> @ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
        {
            <div class="alert alert-danger">
                <p>ERROR: @Model.ErrorMessage</p>
            </div>
        }
        else
        {
            <div><img src="@Model?.Event?.image" height="150" width="150" /></div>
            <div><strong>Name</strong></div>
            <div>@Html.DisplayFor(model => model.Event.name)</div>
            <div><strong>Description</strong></div>
            <div>@Html.DisplayFor(model => model.Event.description)</div>
            <div><strong>Status</strong></div>
            <div>@Html.DisplayFor(model => model.Event.status)</div>
            <div><strong>Start Date</strong></div>
            <div>@Html.DisplayFor(model => model.Event.start)</div>
            <div><strong>Duration (hrs)</strong></div>
            <div>@Html.DisplayFor(model => model.Event.duration)</div>
            <div><strong>Presenter Email</strong></div>
            <div>@Html.DisplayFor(model => model.Event.presenterEmail)</div>
            <div><strong>Price</strong></div>
            <div>@Html.DisplayFor(model => model.Event.price)</div>
            <div><strong>Currency</strong></div>
            <div>@Html.DisplayFor(model => model.Event.currency)</div>
            @if (!string.IsNullOrEmpty(Model?.Event?.liveUrl))
            {
                <div><strong>Live URL</strong></div>
                <div>@Html.DisplayFor(model => model.Event.liveUrl)</div>
            }
        }
    </div>
</div>
